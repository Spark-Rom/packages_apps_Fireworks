<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title=" "
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

   <!-- Title Header -->
    <Preference
        android:layout="@layout/spark_settings_music_header"
        android:selectable="false"/>

    <PreferenceCategory
        android:key="lockscreen_media_category"
        android:title="@string/lockscreen_media_category">

        <com.spark.settings.preferences.SystemSettingSwitchPreference
            android:key="lockscreen_media_metadata"
            settings:iconSpaceReserved="false"
            android:title="@string/media_art_title"
            android:summary="@string/media_art_summary"
            android:defaultValue="true" />

        <com.spark.settings.preferences.SystemSettingListPreference
            android:key="lockscreen_albumart_filter"
            settings:iconSpaceReserved="false"
            android:title="@string/lockscreen_albumart_filter_title"
            android:entries="@array/lockscreen_albumart_filter_entries"
            android:entryValues="@array/lockscreen_albumart_filter_values"
            android:dependency="lockscreen_media_metadata"
            android:defaultValue="0" />

        <Preference
            android:key="pulse"
            settings:iconSpaceReserved="false"
            android:title="@string/pulse_settings"
            android:summary="@string/pulse_settings_summary"
            android:fragment="com.spark.settings.fragments.PulseSettings" />

        <com.spark.settings.preferences.SystemSettingSeekBarPreference
            settings:iconSpaceReserved="false"
            android:key="lockscreen_media_blur"
            android:title="@string/lockscreen_media_blur_title"
            android:max="100"
            android:min="5"
            settings:units="%"
            settings:interval="5"
            android:defaultValue="100"
            android:dependency="lockscreen_media_metadata" />

    </PreferenceCategory>
</PreferenceScreen>
