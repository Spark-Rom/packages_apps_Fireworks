<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	android:title=" "
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

   <!-- Title Header -->
    <Preference
        android:layout="@layout/spark_settings_notifications_header"
        android:selectable="false"/>

    <!-- Heads up -->
    <Preference
        android:key="heads_up_notifications"
        android:summary="Timeout, Snooze and more"
        android:layout="@layout/custom_card_pref"
        settings:iconSpaceReserved="false"
        android:title="@string/heads_up_notifications"
        android:fragment="com.spark.settings.fragments.HeadsUpSettings" />

        <Preference
            android:key="charging_light"
            android:title="@string/battery_light_settings"
            android:summary="@string/battery_light_summary"
            android:layout="@layout/custom_card_pref"
            settings:iconSpaceReserved="false"
            android:fragment="com.spark.settings.fragments.BatteryLightSettings" />

        <Preference
            android:key="edgelightning_settings_key"
            android:title="Edge Lighting"
            android:summary="custom color repeat time and more"
            android:layout="@layout/custom_card_pref"
            settings:iconSpaceReserved="false"
            android:fragment="com.spark.settings.fragments.EdgeSettings" />

        <Preference
            android:key="extranotification_settings_key"
            android:title="Extra Notification Settings"
            android:summary="Notification Headers and more"
            android:layout="@layout/custom_card_pref"
            settings:iconSpaceReserved="false"
            android:fragment="com.spark.settings.fragments.ExtraNotificationSettings" />

        <Preference
            android:key="ticker_settings_key"
            android:title="Notification Ticker"
            android:summary="Tweak duration and animation"
            android:layout="@layout/custom_card_pref"
            settings:iconSpaceReserved="false"
            android:fragment="com.spark.settings.fragments.TickerSettings" />

</PreferenceScreen>
