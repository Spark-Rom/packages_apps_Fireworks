<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title=" " >    

   <!-- Title Header -->
    <Preference
        android:layout="@layout/spark_settings_media_player_header"
        android:selectable="false"/>

    <PreferenceCategory
        android:title="@string/qs_media_player_title">

    <!-- QS media player -->
    <com.spark.settings.preferences.SystemSettingSwitchPreference
        android:key="qs_media_player"
        android:title="@string/qs_media_player_title"
        settings:iconSpaceReserved="false"  
        android:summaryOn="@string/qs_media_player_summary_on"
        android:summaryOff="@string/qs_media_player_summary_off"
        android:defaultValue="true"
        android:disableDependentsState="true" />

    <com.spark.settings.preferences.SystemSettingListPreference
            android:key="media_player_style"
            android:title="@string/media_player_picker"
            settings:iconSpaceReserved="false"  
            android:entries="@array/media_panel_style_entries"
            android:dependency="qs_media_player"
            android:entryValues="@array/media_panel_style_values"
            android:defaultValue="0" />

    <com.spark.settings.preferences.SystemSettingSwitchPreference
        android:key="artwork_media_background"
        android:title="@string/artwork_media_background_title"
        android:summary="@string/artwork_media_background_summary"
        android:defaultValue="false" /> 

    </PreferenceCategory>
</PreferenceScreen>
